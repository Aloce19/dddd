<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="110dp"
        android:background="@drawable/black_rectangle"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Добавить устрйоство"
        android:textColor="@color/white"
        android:textSize="25sp"
        android:layout_marginTop="35dp"
        android:layout_marginStart="95dp"
        android:textStyle="bold"/>

    <ImageView
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:background="@drawable/circle_button"/>

    <Button
        android:layout_width="60dp"
        android:layout_height="60dp"
        android:layout_marginTop="20dp"
        android:layout_marginStart="10dp"
        android:visibility="invisible"/>

    <EditText
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="140dp"
        android:hint="  Название устройства"
        android:background="@drawable/edittextstyle"/>

    <EditText
        android:layout_width="360dp"
        android:layout_height="40dp"
        android:layout_marginStart="30dp"
        android:layout_marginTop="190dp"
        android:hint="  Идентификатор устройства"
        android:background="@drawable/edittextstyle"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textColor="@color/grey"
        android:text="Выбрать комнату"
        android:textStyle="bold"
        android:layout_marginTop="270dp"
        android:layout_marginStart="40dp"/>

    <RadioButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="60dp"
        android:foreground="@drawable/btn_equip_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Свет"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="85dp"/>
    <RadioButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="60dp"
        android:foreground="@drawable/btn_equip_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Кондиционер"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="160dp"/>
    <RadioButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="160dp"
        android:foreground="@drawable/btn_equip_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вытяжка"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginTop="420dp"
        android:layout_marginStart="275dp"/>
    <RadioButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="320dp"
        android:layout_marginStart="260dp"
        android:foreground="@drawable/btn_equip_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Температура"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginTop="555dp"
        android:layout_marginStart="60dp"/>
    <RadioButton
        android:layout_width="90dp"
        android:layout_height="90dp"
        android:layout_marginTop="460dp"
        android:layout_marginStart="160dp"
        android:foreground="@drawable/btn_equip_add"/>
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Вентилятор"
        android:textStyle="bold"
        android:textColor="@color/grey"
        android:textSize="15sp"
        android:layout_marginTop="555dp"
        android:layout_marginStart="165dp"/>

    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="330dp"
        android:layout_marginStart="170dp"
        android:background="@drawable/cond_res"/>
    <ImageView
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_marginTop="470dp"
        android:layout_marginStart="170dp"
        android:background="@drawable/fan_res"/>
